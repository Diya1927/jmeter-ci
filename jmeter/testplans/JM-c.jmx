            <stringProp name="cacheKey">true</stringProp>
            <stringProp name="script">// File path
def filePath = &quot;jmeter/logs/failed_responses.log&quot;

// Check request status
if (!prev.isSuccessful()) {

    // 1️⃣ Set email flag
    vars.put(&quot;sendEmail&quot;, &quot;true&quot;)

    // 2️⃣ Capture response details
    def samplerName = prev.getSampleLabel()
    def responseCode = prev.getResponseCode()
    def responseMessage = prev.getResponseMessage()
    def responseBody = prev.getResponseDataAsString()
    def timeStamp = new Date().format(&quot;yyyy-MM-dd HH:mm:ss&quot;)

    // 3️⃣ Create log entry
    def logEntry = &quot;&quot;&quot;
==============================
Time: ${timeStamp}
Sampler: ${samplerName}
Response Code: ${responseCode}
Response Message: ${responseMessage}
Response Body:
${responseBody}
==============================

&quot;&quot;&quot;

    // 4️⃣ Write to file
    def file = new File(filePath)
    file.parentFile.mkdirs()
    file &lt;&lt; logEntry

    log.error(&quot;❌ Failure detected → email + log generated&quot;)

} else {
    vars.put(&quot;sendEmail&quot;, &quot;false&quot;)
}
</stringProp>
