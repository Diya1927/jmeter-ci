            <stringProp name="script">import java.util.UUID
import java.util.Random

// Random object
Random random = new Random()

// Sample names list
def names = [&quot;Ali&quot;, &quot;Sara&quot;, &quot;Ayesha&quot;, &quot;Zain&quot;, &quot;Ahmed&quot;, &quot;Fatima&quot;, &quot;Hassan&quot;]

// Generate random name
def name = names[random.nextInt(names.size())]

// Generate random age (18–60)
def age = 18 + random.nextInt(43)

// Generate random email
def email = name.toLowerCase() + &quot;_&quot; + UUID.randomUUID().toString().substring(0,6) + &quot;@gmail.com&quot;

// Save to JMeter variables
vars.put(&quot;name&quot;, name)
vars.put(&quot;age&quot;, age.toString())
vars.put(&quot;email&quot;, email)

// Optional: log output
log.info(&quot;Generated User -&gt; Name: ${name}, Age: ${age}, Email: ${email}&quot;)
</stringProp>
